# Udev rules for LDRobot LD06/LD14/LD14P/LD19 LiDAR
# This creates a persistent /dev/ttyLIDAR symlink for the LiDAR device
#
# Installation:
#   sudo cp 99-ldlidar.rules /etc/udev/rules.d/
#   sudo udevadm control --reload-rules
#   sudo udevadm trigger
#
# To find your device's vendor and product IDs when connected:
#   udevadm info --name=/dev/ttyUSB0 --attribute-walk | grep -E 'idVendor|idProduct'
#
# Common USB-to-Serial chips used in LD LiDARs:
#   - CH340: idVendor="1a86", idProduct="7523"
#   - CP2102: idVendor="10c4", idProduct="ea60"
#   - FT232: idVendor="0403", idProduct="6001"

# Template rule - UPDATE idVendor and idProduct with your actual device values
# Uncomment and modify the line below after finding your device IDs:
# SUBSYSTEM=="tty", ATTRS{idVendor}=="XXXX", ATTRS{idProduct}=="YYYY", MODE="0666", SYMLINK+="ttyLIDAR", GROUP="dialout"

# Example for CH340 chip (most common in LD LiDARs):
# SUBSYSTEM=="tty", ATTRS{idVendor}=="1a86", ATTRS{idProduct}=="7523", MODE="0666", SYMLINK+="ttyLIDAR", GROUP="dialout"

# Example for CP2102 chip:
# SUBSYSTEM=="tty", ATTRS{idVendor}=="10c4", ATTRS{idProduct}=="ea60", MODE="0666", SYMLINK+="ttyLIDAR", GROUP="dialout"

# Example for FT232 chip:
# SUBSYSTEM=="tty", ATTRS{idVendor}=="0403", ATTRS{idProduct}=="6001", MODE="0666", SYMLINK+="ttyLIDAR", GROUP="dialout"
